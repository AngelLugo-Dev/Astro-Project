---
//server only
const name = 'Angel Lugo Hola';
const title = 'Astro project';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<!--quite el meta generator por temas de seguridad basado en la version del frameworck -->
		<title>{title}</title>
	</head>
	<body>
		<h1>{name}</h1>
		<p id="current-time">momento actual: </p>
		<footer>
			año: 2023
		</footer>
		<script>
			//Client only
			const footer = document.querySelector('footer') as HTMLElement;
			const currentTimeParagraph = document.querySelector(
				'#current-time'
			) as HTMLParagraphElement;

			
			const currentYear: number = new Date().getFullYear();

			footer.innerText = `año: ${currentYear}`;
			currentTimeParagraph.innerText = `Momento actual real: ${ new Date().toLocaleTimeString() }`;

			//
		</script>
	</body>
</html>
